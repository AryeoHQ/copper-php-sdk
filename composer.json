{
    "name": "aryeo/copper-sdk",
    "description": "PHP SDK for working Copper CRM",
    "keywords": [
        "aryeo",
        "copper"
    ],
    "homepage": "https://github.com/aryeo/copper-sdk",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Yaz Jallad",
            "email": "yaz@aryeo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Aryeo\\Copper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aryeo\\Copper\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
